// <Boilerplate>
@import 'nib'
global-reset()
// Adapted from http://www.paulirish.com/2012/box-sizing-border-box-ftw/
*, *:before, *:after
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
// </Boilerplate>

p-text-color = #454545
p-light-text-color = #999

accent-orange = #F58156
accent-blue = #2D82CC
accent-pink = #E359A6
accent-green = #3AB050
accent-yellow = #EFC554

panel-color = #eee

profile-img-small = 100px
profile-img-large = 1 * profile-img-small

@font-face
    font-family 'Cambo'
    font-style normal
    font-weight 400
    src local('Cambo'), local('Cambo-Regular'), url(http://themes.googleusercontent.com/static/fonts/cambo/v3/svHugj7NIrTQRq-kuQ9YEKCWcynf_cDxXwCLxiixG1c.woff) format('woff')

body
    background-color #0F2A42
    font-family 'Cambo', serif
    color p-text-color
    font-size 16px

h1
    font-size 1.8em
    line-height 1.3em

h2
    font-size 1.2em
    line-height 1.1em
    color p-light-text-color

.panel
    width 90%
    margin 1em auto
    padding 0.5em 
    background-color panel-color
    box-shadow 0.35em 0.35em black
    line-height 1.3em
    text-align center

header
    img
        width 20%
        border-radius 50%
        border 0.25em solid white
        margin .5em
        display inline-block
        vertical-align middle
 
    .greeting
        width 75%
        display inline-block
        vertical-align middle
        text-align left

#name
    color accent-orange
.interest
    color accent-pink

.project
    font-size 0.7em
    margin 0.5em
    display block
    text-align left
    h1
        a:link
            text-decoration none
            color p-text-color
        a:visited
            color p-light-text-color
        a:hover
            color accent-pink
    h2
        font-size 1.2em
    img
        width 10em
        height 10em
        border solid p-text-color-light
        border-radius 0
        margin 0.5em
    div
        display inline-block
        vertical-align top
        width 29.5em
        margin 0.5em
    p
        padding-top 0.5em
        line-height 1.3em



/* Larger screens */
@media screen and (min-width: 42.625em)
    .panel
        font-size 22px
        text-align left
        width 31em
    header
        img
            width 5em