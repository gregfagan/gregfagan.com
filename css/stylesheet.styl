// <Boilerplate>
@import 'nib'

global-reset()

// Adapted from http://www.paulirish.com/2012/box-sizing-border-box-ftw/
*, *:before, *:after
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;

// Adapted from http://css-tricks.com/full-browser-width-bars/
wide-bars(element, color)
    {element}
        position relative
    {element}:before
    {element}:after
      content ""
      position absolute
      background color
      top 0
      bottom 0
      width 9999px
    {element}:before
        right 100%
    {element}:after
        left 100%
    html, body
        overflow-x hidden
// </Boilerplate>

p-font-size = 16px
p-text-color = #454545
p-light-text-color = #999

accent-orange = #F58156
accent-blue = #2D82CC
accent-pink = #E359A6
accent-green = #3AB050
accent-yellow = #EFC554

header-color = #eee

profile-img-small = 100px
profile-img-large = 2 * profile-img-small

@font-face
    font-family 'Cambo'
    font-style normal
    font-weight 400
    src local('Cambo'), local('Cambo-Regular'), url(http://themes.googleusercontent.com/static/fonts/cambo/v3/svHugj7NIrTQRq-kuQ9YEKCWcynf_cDxXwCLxiixG1c.woff) format('woff')

body
    background-color white
    font-family 'Cambo', serif
    color p-text-color
    font-size 16px
    // width 320px

h1
    font-size 2em
    line-height 1.3em

h2
    font-size 1.8em
    color p-light-text-color

header
    width 1.6 * profile-img-large
    background-color header-color
    margin 0 auto
    padding 10px

header img
    display block
    width profile-img-large
    border-radius 50%
    border 4px solid white
    margin 4px auto

wide-bars(header, header-color)

#name
    color accent-orange
.interest
    color accent-pink

/* Larger screens */
@media screen and (min-width: 620px)
    header
        font-size 22px
        width 620px

        img
            width profile-img-small
            float left

        h1, h2
            padding-left profile-img-small + 20px

        h1
            line-height 1em
            padding-top 14px

        h2
            font-size 1.4em
            clearfix()